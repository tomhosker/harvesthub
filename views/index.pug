extends layout

block content
  h1 #{title}
  p Welcome to B-hive's #[strong HarvestHub], the online home of HarvestEye.

  if loggedIn
    h2 Browse Data
    ul
      li #[a(href="/asis/Grower") Growers].

    h2 BoxEye Components
    h3 Browse Tables
    ul
      li #[a(href="/boxeyecomponents/BoxEyeRig") BoxEyeRig],
      li #[a(href="/boxeyecomponents/ArduinoReader") ArduinoReader],
      li #[a(href="/boxeyecomponents/Antenna") Antenna].
    h3 Upload to Tables
    ul
      li #[a(href="/boxeyecomponents/upload2/BoxEyeRig") Upload to BoxEyeRig],
      li #[a(href="/boxeyecomponents/upload2/ArduinoReader") Upload to ArduinoReader],
      li #[a(href="/boxeyecomponents/upload2/Antenna") Upload to Antenna].
    h3 Logs
    h4 Browse
    ul
      li #[a(href="/boxeyecomponents/BoxEyeRigLog") BoxEyeRigLog],
      li #[a(href="/boxeyecomponents/ArduinoReaderLog") ArduinoReaderLog],
      li #[a(href="/boxeyecomponents/AntennaLog") AntennaLog].
    h4 Update
    ul
      li #[a(href="/boxeyecomponents/append2/BoxEyeRigLog") BoxEyeRigLog],
      li #[a(href="/boxeyecomponents/append2/ArduinoReaderLog") ArduinoReaderLog],
      li #[a(href="/boxeyecomponents/append2/AntennaLog") AntennaLog].

  else
    h2 Log In
    p Please log in below.
    form(action="/login", method="post")
      p
        | Username: 
        input(type="text", name="username")
      p
        | Password: 
        input(type="password", name="password")
      input(type="submit", value="Submit")
